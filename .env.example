# --- PostgreSQL ---
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# --- Wildberries API ---
WB_API_TOKEN=__PUT_YOUR_WB_TOKEN__

# --- Google Service Account (JSON creds) ---
# Option 1: Inline JSON (preferred for Docker)
GOOGLE_CREDENTIALS_JSON={}

# Option 2: Separate fields (used if JSON is empty)
GOOGLE_SERVICE_EMAIL=
GOOGLE_PRIVATE_KEY=
# Comma-separated spreadsheet IDs. Create sheets and share with Service Account email.
SHEETS_SPREADSHEET_IDS=
# Range to write (will overwrite). Example: stocks_coefs!A1
SHEETS_WRITE_RANGE=stocks_coefs!A1

# --- Scheduling ---
# Fetch from WB hourly at minute 5
CRON_FETCH=5 * * * *
# Push to Sheets hourly at minute 10
CRON_SHEETS=10 * * * *

# --- Web server ---
PORT=3000

TZ=Asia/Almaty